
#include "extrema.hpp"



namespace math_core {
  
  //======================================================================

  namespace impl {
    double negative_shimmy_f( double x, void* user ) {
      boost::function1<double,double> *f = static_cast<boost::function1<double,double>* >( user );
      return -(*f)(x);
    }
    double shimmy_f( double x, void* user ) {
      boost::function1<double,double> *f = static_cast<boost::function1<double,double>* >( user );
      return (*f)(x);
    }
  }
  
  //======================================================================
  
}
